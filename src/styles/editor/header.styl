#editor
  header
    border-bottom 1px solid lighten(black, 80%)
    height 60px
    padding 0 10px

  .right
    float right

  button
    height 60px
    background none
    border none
    border-left 1px solid lighten(black, 85%)
    margin-right -0.35em
    padding 0 15px
    vertical-align top
    transition all 0.3s ease
    cursor pointer

    &:last-child
      margin-right 0
      border-right 1px solid lighten(black, 85%)

    &:hover
      box-shadow inset 0 2px 3px rgba(0, 0, 0, 0.2)
