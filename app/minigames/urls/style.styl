normalTextShadow = 0 0 30px white, 0 0 30px white, 0 0 30px white
incorrectTextShadow = 0 0 30px red
sectionHeight = 54px
urlTrans = 0.3s
incorrectOpacity = 0.5

.url-cont
  position fixed
  top 0
  left 0
  width 100%
  height 100%

.url-display
  position absolute
  bottom 0.6em
  left 0
  width 100%
  text-align center
  font-size 2em
  line-height 1.5em
  text-shadow normalTextShadow

.url-section
  display inline-block
  text-align center

.url-sep
  display inline-block
  transition opacity urlTrans ease

.url-section:not(.correct) + .url-sep
  opacity incorrectOpacity

.url-section-target
  height sectionHeight
  margin-top -1 * sectionHeight
  position relative

  &.correct
    z-index 1
    // fake transition to appease react
    &.url-section-enter
      opacity 0
      transition all urlTrans ease

    &.url-section-enter-active
      opacity 0.00001

    &.url-section-leave
      opacity 0
      transition all urlTrans ease

    &.url-section-leave-active
      opacity 0.00001

  &.incorrect
    &::after
      content ' '
      position absolute
      display block
      background black
      height 3px
      width 100%
      border-radius 100%
      margin-top -25px

    &.url-section-enter::after
      transform-origin left
      transform scaleX(0)
      transition transform urlTrans linear

    &.url-section-enter-active::after
      transform scaleX(1)

    &.url-section-leave::after
      text-shadow none
      transform-origin right
      transform scaleX(1)
      transition transform urlTrans linear

    &.url-section-leave-active::after
      transform scaleX(0)

  &:not(.correct)
    z-index 2
    opacity incorrectOpacity

    &.url-section-enter
      opacity 1
      transition opacity urlTrans ease

    &.url-section-enter-active
      opacity incorrectOpacity

    &.url-section-leave
      opacity incorrectOpacity
      transition opacity urlTrans ease

    &.url-section-leave-active
      opacity 1

.url-alt,
.url-tick
  height sectionHeight
  margin-top -2 * sectionHeight
  margin-bottom sectionHeight

  &.url-section-enter
    opacity 0
    transition all urlTrans ease

  &.url-section-enter-active
    opacity 1

  &.url-section-leave
    opacity 1
    transition all urlTrans ease

  &.url-section-leave-active
    opacity 0

