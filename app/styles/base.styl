*
  box-sizing border-box

html, body
  margin 0
  padding 0
  width 100%
  height 100%

body
  background eakSkyBlue
  font-family font
  font-size arem
  line-height 1.5em
  background-position center
  background-size cover

#main
  width 100%
  height 100%
  background-color eakSkyBlue
  background-image url('/ui/bg.png'), url('/ui/strip.png')
  background-size 900px 444px, 1px 90px
  background-position center bottom, center bottom
  background-repeat no-repeat, repeat-x

p
  margin-top 0.5*arem

h1, h2, h3
  display block

h1
  font-size 1.75 * arem

h2
  font-size 1.5 * arem

h3
  font-size 1.4 * arem

kbd
  background darken(white, 10%)
  border 1px solid darken(white, 20%)
  font-family codeFonts
  border-radius 5px
  padding 0 7px

code
  font-family codeFonts

em
  font-style italic

strong
  font-weight bold

.stripe_checkout_app
  z-index 200001 !important
