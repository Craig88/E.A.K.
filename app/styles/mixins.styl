calcVendors = webkit moz ms

calc()
  if current-property
    for prefix in calcVendors
      arguments = unquote(arguments)
      add-property(current-property[0], s('-%s-calc(%s)', prefix, arguments))
    s('calc(%s)', arguments)
  else
      error('calc() must be used within a property')

button-color(col)
  background col
  box-shadow 0 0.2em 0 lighten(col, 30%)

  &:hover
    background lighten(col, 20%)
