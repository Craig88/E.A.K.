.flying-monster
  background-image url('/content/common/monster.png')
  background-size contain
  background-repeat no-repeat
  width 135px
  height 85px
  position absolute
  animation flying-monster 5s cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite alternate

@keyframes flying-monster
  0%
    transform translate(-100px, -20px) rotate(-15deg)

  10%
    transform translate(-80px, 0) rotate(15deg)

  20%
    transform translate(-60px, 20px) rotate(-15deg)

  30%
    transform translate(-40px, 0) rotate(15deg)

  40%
    transform translate(-20px, -20px) rotate(-15deg)

  50%
    transform translate(0, 0) rotate(15deg)

  60%
    transform translate(20px, 20px) rotate(-15deg)

  70%
    transform translate(40px, 0) rotate(15deg)

  80%
    transform translate(60px, -20px) rotate(-15deg)

  90%
    transform translate(80px, 0) rotate(15deg)

  100%
    transform translate(100px, 20px) rotate(-15deg)



