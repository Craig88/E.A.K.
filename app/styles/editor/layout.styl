#editor
  position absolute
  width 50%
  height 100%
  top 0
  left 0
  transform translate(-100%, 0)
  background white
  z-index 7500
  transition all editTransitionLength ease

#editor .editor
  display flex
  flex-flow column nowrap
  align-items stretch

  transition all editTransitionLength ease

  .topbar
    z-index 10
    flex-basis 50px

    button
      position relative
      height 50px
      min-width 50px
      background none
      border none
      border-left 1px solid lighten(black, 90%)
      padding 0 15px
      vertical-align top
      transition all 0.3s ease
      cursor pointer
      font-family font
      font-size 16px

      &:last-child
        margin-right 0
        border-right 1px solid lighten(black, 90%)

      // &:hover
        // box-shadow inset 0 2px 3px rgba(0, 0, 0, 0.2)

      &:after
        content ' '
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        box-shadow 0 2px 7px rgba(0, 0, 0, 0.2)
        opacity 0
        transition opacity 0.3s ease

      &:hover:after
        opacity 1

  .editor-html
    flex 3
    // position relative

    .CodeMirror
      position absolute
      height 100%
      width 100%

  .editor-tutorial
    flex-basis 250px

body.editor

  #editor
    transform translate(0, 0)
    box-shadow 0 0 20px rgba(0, 0, 0, 0.4)

body.hide-bar #editor
  display none
