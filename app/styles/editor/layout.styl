#editor
  display flex
  flex-flow column nowrap
  align-items stretch
  position absolute
  width 50%
  height 100%
  top 0
  left 0
  transform translate(-100%, 0)
  background white
  z-index 7500

  transition all editTransitionLength ease

  .topbar
    flex-basis 50px

    button
      height 50px
      min-width 50px
      background none
      border none
      border-left 1px solid lighten(black, 90%)
      margin-right -0.5em
      padding 0 15px
      vertical-align top
      transition all 0.3s ease
      cursor pointer
      font-family font
      font-size 16px

      &:last-child
        margin-right 0
        border-right 1px solid lighten(black, 90%)

      &:hover
        box-shadow inset 0 2px 3px rgba(0, 0, 0, 0.2)

  .editor-html
    flex 3
    position relative

    .CodeMirror
      position absolute
      height 100%
      width 100%

  .editor-tutorial
    flex-basis 250px

body.editor

  #editor
    transform translate(0, 0)
    box-shadow 0 0 20px rgba(0, 0, 0, 0.4)
