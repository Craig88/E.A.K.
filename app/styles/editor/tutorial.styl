.action-highlight
  position absolute
  z-index 999999
  animation action-highlight-pulse 0.5s linear alternate infinite
  animation-play-state running !important
  pointer-events none

.highlight-action
  animation code-highlight-pulse 0.5s ease-in-out alternate infinite

.tutorial-step-btn
  animation tutorial-step-btn-in 0.3s easeOutBack backwards

.tutorial-speech
  position absolute
  z-index 100
  top 0
  left 0
  right 130px
  transition all 0.5s ease

.tutorial-speech-img
  position absolute
  width 100px
  z-index 10

.tutorial-speech-msg
  position absolute
  background white
  box-shadow 0 2px 6px rgba(0, 0, 0, 0.2)
  border-radius 10px
  top 10px
  left 45px
  padding 10px
  padding-left 65px

@keyframes tutorial-step-btn-in
  from
    opacity 0
    transform scale(0)

  to
    opacity 1
    transform scale(1)

@keyframes action-highlight-pulse
  from
    background-color rgba(eakPurple, 0.2)

  to
    background-color rgba(eakPurple, 0.5)

@keyframes code-highlight-pulse
  from
    background-color white

  to
    background-color lighten(eakPurple, 80%)
