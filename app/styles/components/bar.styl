.topbar
  border-bottom 1px solid lighten(black, 90%)
  background white
  height 50px
  padding 0 10px

  .right
    float right

  button
    height 50px
    min-width 50px
    background none
    border none
    border-left 1px solid lighten(black, 90%)
    margin-right -0.5em
    padding 0 15px
    vertical-align top
    transition all 0.3s ease
    cursor pointer
    font-family font
    font-size 16px

    &:last-child
      margin-right 0
      border-right 1px solid lighten(black, 90%)

    &:hover
      box-shadow inset 0 2px 3px rgba(0, 0, 0, 0.2)

  .fa, .fa:before
    font-size 22px
    color black

#bar
  position fixed
  top 0
  left 0
  right 0
  z-index 40
  background transparent
  border none

  display none

  button
    @extend .overlay-button
    margin-top 10px

  .playing-area &
    display block
    transform translateY(-50px)
    opacity 0
    transition all 1s ease

  .playing:not(.hide-bar) &
    display block

  .playing-area:not(.hide-bar) &
    transform translateY(0)
    opacity 1

  .levelname
    margin-right 7px
    text-align right

    h2
      font-size 22px
      margin-top 3px

    h4
      font-size 16px
      margin-top -10px

  .debug-data
    line-height 45px
    margin-right 30px
