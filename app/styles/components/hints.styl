.pointer-hint
  position absolute
  width 350px
  display none
  margin-top 20px
  margin-left -175px
  z-index 99998

  > div
    position relative
    background-color white
    box-shadow 0 0 5px rgba(30, 200, 255, 0.6)
    border-radius 5px
    padding 10px
    z-index 100000

  &:before
    content ""
    display block
    position absolute
    width 20px
    height 20px
    top -10px
    left 50%
    margin-left -10px
    background-color white
    box-shadow 0 0 5px rgba(30, 200, 255, 0.6)
    transform rotate(45deg)
    z-index 99999

  &.active
    display block
    animation pointerHintIn 0.3s ease

  &.done
    animation pointerHintOut 0.5s ease

@keyframes pointerHintIn
  from
    opacity 0

  to
    opacity 1

@keyframes pointerHintOut
  from
    opacity 1

  to
    opacity 0
