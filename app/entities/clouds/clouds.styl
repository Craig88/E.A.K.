.cloud
  position absolute
  background-size 100% 100%
  background-repeat no-repeat
  background-position center
  z-index 0

.cloud-a
  @extends .cloud
  background-image url('/entities/clouds/cloud-a.png')
  animation cloud-float 5s cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite
  width 125px
  height 90px

.cloud-b
  @extends .cloud
  background-image url('/entities/clouds/cloud-b.png')
  animation cloud-float 6s 0.5s cubic-bezier(0.445, 0.05, 0.55, 0.95) infinite reverse
  width 150px
  height 74px

@keyframes cloud-float
  0%
    transform translate(0, -10px)

  50%
    transform translate(0, 10px)

  100%
    transform translate(0, -10px)
